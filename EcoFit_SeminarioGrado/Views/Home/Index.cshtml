@{
    ViewBag.Title = "Home Page";
}

<div id="themeSlider" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#themeSlider" data-slide-to="0" class="active"></li>
        <li data-target="#themeSlider" data-slide-to="1"></li>
        <li data-target="#themeSlider" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner">
        <div class="item active">
            <div class="imgOverlay"></div>
            <img style="height:320px;width:100%" src="../Images/background-2.jpg" alt="First slide">
            <div class="carousel-caption">
                <h3>¡Recicla desde tu casa!</h3>
                <p>Cotiza con nosotros el manejo de tu chatarra</p>
            </div>
        </div>
        <div class="item">
            <div class="imgOverlay"></div>
            <img style="height:320px;width:100%" src="../Images/background-6.jpeg" alt="Second slide">
            <div class="carousel-caption">
                <h3>¡Cotiza con nosotros!</h3>
                <p>Disponemos de gran cantidad de material reciclado para Empresas</p>
            </div>
        </div>
        <div class="item">
            <div class="imgOverlay"></div>
            <img style="height:320px;width:100%" src="../Images/background-3.jpg" alt="Third slide">
            <div class="carousel-caption">
                <h3>¡Agenda tu retiro!</h3>
                <p>Escoge tu fecha y bloque horario para recoger tus residuos</p>
            </div>
        </div>
    </div>

    <a class="left carousel-control" href="#themeSlider" data-slide="prev">
        <span class="fa fa-chevron-left"></span>
    </a>
    <a class="right carousel-control" href="#themeSlider" data-slide="next">
        <span class="fa fa-chevron-right"></span>
    </a>
</div>
<div class="olContent f1"><h2 string="color:black">Buscar Producto/Categoría</h2></div>
<div class="olSearch fr">
    <input type="text" placeholder="Ingrese Búsqueda" name="searchKey" class="inputComn houseText form-control"/>
    <div class="searchIcon">
        <button type="button" class="searchBtn">
            <img src="~/Images/IconoBusqueda.png" />
        </button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="page-header">
            <h2>Nuestros Productos <small>Productos en Venta</small></h2>
        </div>
    </div>
</div>

<div class="row product-container">
    <div class="col-md-3 col-sm-3 col-xs-6" style="margin-bottom:8px">
        <div class="thumbnail product-item" style="height:300px">
            <img class="img-responsive" title="Click to View Product Detail" style="cursor:pointer;height:160px;width:100%" src="~/Images/Producto1.jpg" />
            <div class="caption">
                <h5>Nombre Producto</h5>
                <p>Precio</p>
                <p>7.500 CLP</p>
                <p>¡Disponible!</p>
                <div class="product-item-badge">Nuevo</div>
            </div>
        </div>
    </div>
</div>